<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10-index">
    <p><%= notice %></p>
    <h1>ブログ一覧</h1>
    <%= link_to "ブログを投稿する", new_blog_path, class: 'btn btn-default' %>
    <% @blogs.each do |blog| %>
      <div class="row">
        <p><%= blog.user.name%></p>
        <%= link_to blog_path(blog) do %>
          <h4><strong><%= blog.title %></strong></h4>
        <% end %>
        <p><%= blog.content%></p>
        <div class="picture">
          <div class="img src">
            <%= image_tag blog.image %>
          </div>
          <div class="picture buttun" >
            <%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-primary' %>
            <%= link_to "削除", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div id="page-top-btn" class="page-top-btn">
  <p><a class="move-page-top" id="move-page-top"></a></p>
</div>